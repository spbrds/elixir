<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_action_container"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/colorAccent"
    android:layout_gravity="bottom|end"
    >

     <ImageButton
         android:id="@+id/fabNot"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:src="@drawable/ic_play_arrow_white_24dp"
         android:layout_centerInParent="true"
         style="@style/action_buttons"/>

    <ImageButton
        android:id="@+id/list_add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fabNot"
        style="@style/action_buttons"/>

    <ImageButton
        android:id="@+id/list_remove"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_remove_white_24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_add"
        style="@style/action_buttons"/>

    <ImageButton
        android:id="@+id/list_check"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_done_white_24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fabNot"
        style="@style/action_buttons"/>


</RelativeLayout>